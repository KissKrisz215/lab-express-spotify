<div class="container-fluid bg-light">
    <h1 class="text-center fs-xl p-4 fw-bold text-uppercase">Albums</h1>
<div class="container d-flex flex-wrap justify-content-center gap-4">{{#each albums}}
    <div class="card rounded-3" style="max-width:300px;width:300px;">
        <img class="h-75" src="{{this.images.[1].url}}" alt="">
        <div class="card-body d-flex flex-column align-items-center bg-secondary text-white rounded-bottom-3">
           <h5 class="card-title">{{this.name}}</h5>
           <form  class="d-flex flex-column align-items-center gap-3" action="/tracks/{{this.id}}" method="post" enctype="application/json">
           <button class="btn btn-danger" type="submit">View Tracks</button>
           </form>
        </div>
    </div>
{{/each}}
</div>
</div>